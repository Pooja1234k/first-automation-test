			"name": "Create new record in database",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"// Assersion 1 status code check\r",
							"pm.test(\"Status code check\", function () {\r",
							"    pm.response.to.have.status(200);\r",
							"});\r",
							"\r",
							"// Assersion 2 Response value check\r",
							"pm.test(\"check key-value pair in the response\", function () {\r",
							"var jsonData = pm.response.json();\r",
							"\r",
							"//name check\r",
							"pm.expect(jsonData.data.name).to.eql(\"pooja\");\r",
							"\r",
							"//salary check\r",
							"pm.expect(jsonData.data.salary).to.eql(\"4567456\");\r",
							"\r",
							"//age check\r",
							"pm.expect(jsonData.data.age).to.eql(\"26\");\r",
							"});\r",
							"\r",
							"//set employee ID as environment variable\r",
							"pm.test(\"set employee ID as environment variable\", function () {\r",
							"var jsonData = pm.response.json();\r",
							"\r",
							"pm.environment.set(\"employeeID\", jsonData.data.id);\r",
							"});\r",
							" \r",
							"\r",
							"\r",
							""
						],
						"type": "text/javascript"
					}
				}
